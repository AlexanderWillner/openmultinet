<Definitions name="IMSMRFServiceTemplateDefinition"
	targetNamespace="http://www.etsi.org/sample" xmlns="http://docs.oasis-open.org/tosca/ns/2011/12">
	<Tags>
		<Tag name="author" value="someone@example.com" />
	</Tags>
	<Types>
		<xs:schema elementFormDefault="qualified"
			attributeFormDefault="unqualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
			<xs:element name="ApplicationProperties">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="Vendor" type="xs:string" />
						<xs:element name="VNFD" type="xs:string" />
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:schema>
	</Types>
	<ServiceTemplate id="IMSMRFServiceTemplate">
		<TopologyTemplate id="IMSMRFService">
			<NodeTemplate id="MyMRB" name="MyMRB" type="sample:MRBNode" xmlns:sample="http://www.etsi.org/sample">
				<Properties>
					<sample:ApplicationProperties>
						<sample:Vendor>VendorX</sample:Vendor>
						<sample:VNFD>IMS_MRB_x2</sample:VNFD>
					</sample:ApplicationProperties>
				</Properties>
			</NodeTemplate>
			<NodeTemplate id="MyMRF" name="MyMRF" type="sample:MRFNode" xmlns:sample="http://www.etsi.org/sample" />
			<RelationshipTemplate name="MyDeploymentRelationship"
				id="MyDeploymentRelationship" type="sample:dependOn" xmlns:sample="http://www.etsi.org/sample">
				<SourceElement ref="MyMRF" />
				<TargetElement ref="MyMRB" />
			</RelationshipTemplate>
		</TopologyTemplate>
		<Plans>
			<Plan id="InstantiateMRB"
				planType="http://docs.oasis-open.org/tosca/ns/2011/12/PlanTypes/InstantiatePlan"
				planLanguage="http://docs.oasis-open.org/wsbpel/2.0/process/executable">
				<PlanModelReference reference="prj:InitiateMRB" />
			</Plan>
			<Plan id="InstantiateMRF "
				planType="http://docs.oasis-open.org/tosca/ns/2011/12/PlanTypes/TerminationPlan"
				planLanguage="http://docs.oasis-open.org/wsbpel/2.0/process/executable">
				<PlanModelReference reference="prj:InitiateMRF" />
			</Plan>
		</Plans>
	</ServiceTemplate>
	<NodeType name="MRBNode" targetNamespace="http://www.etsi.org/sample">
		<documentation xml:lang="EN">
			A reusable definition of a MRB
			node type representing an MRB VNF that can be deployed.
		</documentation>
		<PropertiesDefinition element="sample:ApplicationProperties"  xmlns:sample="http://www.etsi.org/sample" />
		<Interfaces>
			<Interface name="InstantiationInterface">
				<Operation name="InstantiateMRB">
					<InputParameters>
						<InputParamter name="InstanceName" type="xs:string" />
						<InputParamter name="NumberOfInstance" type="xs:integer" />
					</InputParameters>
				</Operation>
			</Interface>
		</Interfaces>
	</NodeType>
	<NodeType name="MRFNode" targetNamespace="http://www.etsi.org/sample">
		<PropertiesDefinition element="sample:ApplicationProperties"  xmlns:sample="http://www.etsi.org/sample" />
		<Interfaces>
			<Interface name="InstantiationInterface">
				<Operation name="InstantiateMRB" />
				<InputParameters>
					<InputParamter name="InstanceName" type="xs:string" />
					<InputParamter name="NumberOfInstance" type="xs:integer" />
				</InputParameters>
			</Interface>
		</Interfaces>
	</NodeType>
	<RelationshipType name="dependOn" targetNamespace="http://www.etsi.org/sample">
		<documentation xml:lang="EN">
			A reusable definition of
			relation that expresses dependencies between
			two VNF in NFV Service..
		</documentation>
	</RelationshipType>
</Definitions>